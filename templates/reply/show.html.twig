{% extends 'base.html.twig' %}

{% block title %}Reply{% endblock %}

{% block body %}
    <h1>Reply</h1>
    <h2>Reply {{ reply.id }}.</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reply.id }}</td>
            </tr>
            <tr>
                <th>Acceptance</th>
                <td>{{ reply.acceptance ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Reason</th>
                <td>{{ reply.reason }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reply_index') }}">back to list</a>

    <a href="{{ path('reply_edit', {'id': reply.id}) }}">edit</a>

    {{ include('reply/_delete_form.html.twig') }}
{% endblock %}
